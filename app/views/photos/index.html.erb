<div>
  <div>
    <h1>
      List of photos
    </h1>
  </div>
</div>


<div>
  <div>
    <table border="1">
      <tr>
        
        <th>
          Image
        </th>

        <th>
          Caption
        </th>

        <th>
          Owner
        </th>

        <th>Posted</th>

        <th>
          Likes
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_photos.each do |a_photo| %>
      <tr>
        
        <td>
          <img src="<%= a_photo.image %>">
        </td>

        <td>
          <%= a_photo.caption %>
        </td>

        <td>
          <%= a_photo.poster.username %>
        </td>

        <td>
          <%= a_photo.likes_count %>
        </td>

<% if current_user != nil %>
          <td>
          <a href="/photos/<%= a_photo.id %>">
            Show details
          </a>
        </td>
  <% else %>
         <td>
          <a href="/users/sign_in">
            Show details
          </a>
        </td>
<% end %>
        
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
