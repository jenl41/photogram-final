<div>
  <div>
    <h1>
      List of users
    </h1>
  </div>

  </div>

<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Username
        </th>

        <th>
          Private?
        </th>

<th></th>

        <th>
        </th>
      </tr>

      <% @list_of_users.each do |a_user| %>
      <tr>
       
        <td>
          <%= a_user.username %>
        </td>

        <td>
              <%= human_boolean(a_user.private) %>
        </td>
<td></td>

<% if current_user != nil %>
          <td>
          <a href="/users/<%= a_user.id %>">
            Show details
          </a>
         </td>
  <% else %>
   <td>
          <a href="/users/sign_in">
            Show details
          </a>
        </td>
<% end %>

       
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
